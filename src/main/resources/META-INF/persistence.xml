<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="a_persistent_fellow" transaction-type="RESOURCE_LOCAL">
        <description>
            This unit does CRUD operations to a database. It does not rely
            on any vendor-specific features and can therefore be deployed
            to any persistence provider.
        </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>practicum2.entity.Department</class>
        <class>practicum2.entity.DeptEmp</class>
        <class>practicum2.entity.compositeKeys.DeptEmpId</class>
        <class>practicum2.entity.DeptManager</class>
        <class>practicum2.entity.compositeKeys.DeptManagerId</class>
        <class>practicum2.entity.Employee</class>
        <class>practicum2.entity.Salary</class>
        <class>practicum2.entity.Title</class>

        <properties>
            <!--access db through jdbc-->
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3306"/>

            <!--access local db with user and password-->
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!--print to hibernate console the sql statements and result-->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>